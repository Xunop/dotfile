{
    "routing": {
        "domainStrategy": "IPIfNonMatch",
        "rules": [
            {
                "type": "field",
                "inboundTag": ["tproxy"],
                "port": 53,
                "outboundTag": "dns-out"
            },

            { // 广告拦截
                "type": "field", 
                "domain": [
                  "geosite:category-ads-all"
                ],
                "outboundTag": "block"
            },
            
            // github raw
            {
                "type":"field",
                "domain": ["domain:githubusercontent.com"],
                "outboundTag": "proxy-jp"
            },

            { // BT 流量直连
                "type": "field",
                "protocol":["bittorrent"], 
                "outboundTag": "direct"
            },

            {
                "type": "field",
                "domain": ["geosite.cn"],
                "outboundTag": "direct"
            },
            
            {
                "type": "field",
                "domain": ["geoip.cn", "233.5.5.5", "119.29.29.29", "private_ip1"],
                "outboundTag": "direct"
            },
            
            { // TG 代理
                "type": "field",
                "domain": [
                    "geosite:telegram"
                ],
                "outboundTag": "proxy-jp"
            },

            {
                "type": "field",
                "ip": ["8.8.8.8", "1.1.1.1"],
                "outboundTag": "proxy-jp"
            },

            {
                "type": "field",
                "domain": ["geosite:geolocation-!cn"],
                "outboundTag": "proxy-jp"
            }
        ]
    }
}
